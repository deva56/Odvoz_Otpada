@model OdvozOtpada.Models.grad

@{
    ViewBag.Title = "Kreiranje grada";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<h2 class="text-center">Dodaj novi grad u bazu</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
        <hr />

        <div class="container">
            <center>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-12">
                    @Html.Label("Ime grada", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.imeGrad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.imeGrad, "", new { @class = "text-danger" })
                </div>
            </center>
        </div>
    
        <div class="form-group text-center">
            <div class="col-md-12">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Natrag", "IndexGrad")
</div>
