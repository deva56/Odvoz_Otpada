@model OdvozOtpada.Models.grad

@{
    ViewBag.Title = "Ažuriranje grada";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />  
<h2 class="text-center">Uređivanje podataka o gradu iz baze</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
  

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idGrad)
            <br />
            <div class="form-group col-md-12">
                @Html.Label("Ime grada", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.imeGrad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imeGrad, "", new { @class = "text-danger" })
            </div>
        </center>
    </div>
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Ažuriraj" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag", "IndexGrad")
</div>
