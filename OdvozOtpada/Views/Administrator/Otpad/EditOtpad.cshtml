@model OdvozOtpada.Models.otpad

@{
    ViewBag.Title = "Uređivanje podataka o otpadu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<h2 class="text-center">Uređivanje podataka o otpadu iz baze</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    

    <hr />
    @Html.HiddenFor(model => model.idOtpad)

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-12">
                @Html.Label("Vrsta otpada", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.vrstaOtpad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vrstaOtpad, "", new { @class = "text-danger" })
            </div>
        </center>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-12 text-center">
            <input type="submit" value="Ažuriraj" class="btn btn-primary" />
        </div>
    </div>

}

    <div>
        @Html.ActionLink("Natrag", "IndexOtpad")
    </div>
