@model OdvozOtpada.Models.otpad

@{
    ViewBag.Title = "Kreiranje vrste otpada";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<br />  
<h2 class="text-center">Kreiraj novu vrstu otpada u bazi</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

    <hr />

    <div class="container">
        <center>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-md-12">
                @Html.Label("Vrsta otpada", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.vrstaOtpad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vrstaOtpad, "", new { @class = "text-danger" })
            </div>
        </center>
    </div>
    <br />
    <div class="form-group text-center">
        <div class="col-md-12">
            <input type="submit" value="Kreiraj" class="btn btn-primary" />
        </div>
    </div>

}

    <div>
        @Html.ActionLink("Natrag", "IndexOtpad")
    </div>
