@model IEnumerable<OdvozOtpada.Models.rasporedodvoza>

@{ 
    if (Model.Count()==0)
    {
        <h2 class="text-center">Nema rezultata koji odgovaraju vašoj pretragi. Pokušajte ponovno.</h2>
    }
    else
    {
    <table class="table">
        <tr>
            <th>
                Vrsta otpada
            </th>
            <th>
                Ime grada
            </th>
            <th>
                Ime ulice
            </th>
            <th>
                Dan odvoza
            </th>
            <th>
                Datum odvoza
            </th>
            <th>
                Vrijeme odvoza
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.otpad.vrstaOtpad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grad.imeGrad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ulica.imeUlica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.danTjednaOdvoza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumOdvoza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vrijemeOdvoza)
        </td>
    </tr>
        }
    </table>
        }
    }